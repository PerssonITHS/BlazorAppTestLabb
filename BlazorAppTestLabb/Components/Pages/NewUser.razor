@page "/newUser"
@rendermode InteractiveServer


<EditForm Model="userOne" OnSubmit="HandleInput">

	@if (!_isSubmitted)
	{
		<h3>Register a new user</h3>
		<h4>Fill out your information to be a part of the Website!</h4>
		<div>
			<label>First and lastname:</label>
			<input type="text" @bind=_name />
		</div>
		<div>
			<label>Email:</label>
			<input type="text" @bind=_email />
		</div>
		<div>
			<label>ID</label>
			<input type="text" @bind=_id />
		</div>
		<div>
			<label>Street:</label>
			<input type="text" @bind=_street />
		</div>
		<div>
			<label>ZipCode</label>
			<input type="text" @bind=_zipCode />
		</div>
		<div>
			<label>City</label>
			<input type="text" @bind=_city />
		</div>
		<div>
			<label>Company</label>
			<input type="text" @bind=_company />
		</div>
		<div>
			<label>Your company's catchphrase</label>
			<input type="text" @bind=_companyCatchPhrase />
		</div>

		<button type="submit" class="w-20 btn btn-lg btn-primary">Register new user</button>
	}
	else
	{
		<h4>Now you're one of us. Your registered information is:</h4>
		<p>Namn: @_name</p>
		<p>Email: @_email</p>
		<p>ID: @_id</p>
		<p>Street: @_street</p>
		<p>ZipCode: @_zipCode</p>
		<p>City: @_city</p>
		<p>Company: @_company</p>
		<p>Company Catchphrase: @_companyCatchPhrase</p>

	}
</EditForm>



